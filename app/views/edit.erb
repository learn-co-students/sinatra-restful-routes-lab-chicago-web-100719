<form method="post" action="/recipes/<%= @recipe.id %>">
<input type="hidden" name="_method" value="patch">
<h1>Recipe Name : <input type="text" name="name" value="<%=@recipe.name%>"></h1>
<p>Ingredients : <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
<p>Cook Time : <input type="text" name="cook_time" value=" <%= @recipe.cook_time%>"></p>
<input type="submit" value="Save">
</form>